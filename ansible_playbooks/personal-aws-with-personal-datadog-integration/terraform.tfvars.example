# Example only — replace with real values in terraform.tfvars
# Prefer exporting env vars (DD_API_KEY / DD_APP_KEY) instead of hardcoding keys.

# Datadog credentials (sensitive – ignored in .gitignore when placed in terraform.tfvars)
datadog_api_key  = "<your-datadog-api-key>"
datadog_app_key  = "<your-datadog-app-key>"

# Datadog site URL (match your region)
# Common options:
#   US1 (default): https://api.datadoghq.com/
#   US3:           https://api.us3.datadoghq.com/
#   US5:           https://api.us5.datadoghq.com/
#   EU:            https://api.datadoghq.eu/
#   Gov:           https://api.ddog-gov.com/
datadog_site_url = "https://api.datadoghq.com/"

# AWS account for integration
aws_account_id    = "<your-aws-account-id>"
aws_partition     = "aws"
datadog_role_name = "DatadogIntegrationRole"

# Example tags
account_tags = [
  "env:dev",
  "account:shared",
  "purpose:demo"
]
